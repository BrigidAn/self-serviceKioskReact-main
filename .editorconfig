# Template Version: 8.5
# See https://editorconfig.org

root = true

# Base Template -------------------------------------------------------------------------------------------------------
# This section contains the template settings.
# DO NOT modify settings in this section.
# To override, copy the setting to the relevant filepath section in the Overrides section and modify it there.

[*]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = false

# Spelling ------------------------------------------------------------------------------------------------------------
spelling_checkable_types = strings,identifiers,comments
spelling_error_severity = warning
spelling_exclusion_path = exclusions.dic
spelling_languages = en-za,en-us
spelling_use_default_exclusion_dictionary = true

